<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Ngân sách "
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Thông báo chưa có ngân sách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có ngân sách"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bắt đầu tiết kiệm bằng cách tạo ngân sách và chúng tôi sẽ giúp bạn kiểm soát ngân sách"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- Dòng kẻ ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp"/>

        <!-- Nút tạo ngân sách -->
        <Button
            android:id="@+id/btnCreateBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo ngân sách"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4285F4"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Hướng dẫn sử dụng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sử dụng ngân sách như thế nào?"
            android:textSize="16sp"
            android:textColor="#4285F4"
            android:layout_marginBottom="24dp"/>

        <!-- Menu dưới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng quan"
                android:textSize="16sp"
                android:textColor="#4285F4"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số giao dịch"
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
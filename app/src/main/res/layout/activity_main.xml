<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background_light"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashboard_background_light"
        android:elevation="0dp"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:id="@+id/header_title_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tv_header_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 đ"
                    android:textColor="@color/text_main_header"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/sub_header_balance_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/text_secondary_gray"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/tv_sub_header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_balance"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_help_outline"
                        app:tint="@color/text_secondary_gray"
                        android:layout_marginStart="4dp"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sub_header_report_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:visibility="gone">
                    <View
                        android:id="@+id/dot1"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/dot_active"
                        android:layout_marginEnd="4dp" />
                    <View
                        android:id="@+id/dot2"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/dot_inactive"
                        android:layout_marginEnd="4dp"/>
                    <View
                        android:id="@+id/dot3"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/dot_inactive" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_search"
                app:tint="@color/text_main_header"
                app:layout_constraintEnd_toStartOf="@+id/btn_notifications"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/btn_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_notifications"
                app:tint="@color/text_main_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/wallet_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/my_wallet"
                            android:textColor="@color/text_main_header"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_money"
                            app:tint="@color/black"
                            android:background="@drawable/circular_bg_orange"
                            android:padding="8dp"
                            android:layout_marginEnd="16dp"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cash"
                            android:textColor="@color/text_dark"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 đ"
                            android:textColor="@color/text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/report_card_dynamic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:id="@+id/tv_report_section_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/report_this_month"
                            android:textColor="@color/text_main_header"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_see_report_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_report"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/report_summary_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_spent"
                                android:textColor="@color/text_secondary_gray"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/tv_total_spent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/expense_item_red"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="60dp"
                                android:layout_height="2dp"
                                android:background="@color/expense_item_red"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_income"
                                android:textColor="@color/primary_green"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/tv_total_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/primary_green"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="60dp"
                                android:layout_height="2dp"
                                android:background="@color/primary_green"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_empty_report_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_transaction_prompt"
                        android:gravity="center"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="16sp"
                        android:paddingVertical="40dp" />

                    <LinearLayout
                        android:id="@+id/report_tab_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_layout_week_month_report"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabIndicatorHeight="0dp"
                            app:tabBackground="@drawable/tab_selector_background"
                            app:tabTextColor="@color/text_main_header"
                            app:tabSelectedTextColor="@color/white"
                            app:tabGravity="fill"
                            app:tabMode="fixed"
                            app:tabRippleColor="@null"
                            android:background="@drawable/tab_layout_border"
                            android:layout_marginBottom="24dp">
                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/week" />
                            <com.google.android.material.tabs.TabItem
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/month" />
                        </com.google.android.material.tabs.TabLayout>

                        <TextView
                            android:id="@+id/tv_current_report_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 đ"
                            android:textColor="@color/text_main_header"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tv_total_spent_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/report_this_month"
                            android:textColor="@color/text_secondary_gray"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@color/dashboard_background_light"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chart_placeholder"
                                android:textColor="@color/text_secondary_gray"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/previous_month"
                                android:textColor="@color/text_secondary_gray" />
                            <View
                                android:id="@+id/dot_active_chart"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/dot_active"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp" />
                            <View
                                android:id="@+id/dot_inactive_chart"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/dot_inactive" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/this_month"
                                android:textColor="@color/text_secondary_gray"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">
                        <ImageButton
                            android:id="@+id/btn_report_prev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@color/primary_green"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:id="@+id/tv_report_trend_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/trend_report"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true" />
                        <ImageButton
                            android:id="@+id/btn_report_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/primary_green"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/report_page_indicators"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center">
                        <View
                            android:id="@+id/report_dot1"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/dot_active"
                            android:layout_marginEnd="4dp" />
                        <View
                            android:id="@+id/report_dot2"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/dot_inactive" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/deal_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/deal_card_gradient_background"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_new_member"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_timer"
                            app:tint="@color/white"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:id="@+id/tv_countdown_timer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="06:39:22"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-50 %"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_upgrade_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upgrade_now"
                        android:textColor="@color/deal_button_text"
                        android:textSize="14sp"
                        android:background="@drawable/deal_button_background"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:stateListAnimator="@null"
                        android:elevation="0dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/top_expense_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/top_spending"
                            android:textColor="@color/text_main_header"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_details"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout_week_month_expense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorHeight="0dp"
                        app:tabBackground="@drawable/tab_selector_background"
                        app:tabTextColor="@color/text_main_header"
                        app:tabSelectedTextColor="@color/white"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabRippleColor="@null"
                        android:background="@drawable/tab_layout_border"
                        android:layout_marginBottom="24dp">
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/week" />
                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/month" />
                    </com.google.android.material.tabs.TabLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_food"
                                app:tint="@color/expense_item_red"
                                android:layout_marginEnd="16dp"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/category_eating"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textColor="@color/expense_item_red"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/progress_food"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:max="100"
                            android:progress="80"
                            android:progressTint="@color/expense_item_red"
                            android:progressBackgroundTint="@color/input_border_light"
                            android:layout_marginBottom="16dp"
                            android:scaleY="2"
                            tools:targetApi="lollipop"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_house"
                                app:tint="@color/expense_item_orange"
                                android:layout_marginEnd="16dp"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/category_rent"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15%"
                                android:textColor="@color/expense_item_orange"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/progress_house"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:max="100"
                            android:progress="15"
                            android:progressTint="@color/expense_item_orange"
                            android:progressBackgroundTint="@color/input_border_light"
                            android:layout_marginBottom="16dp"
                            android:scaleY="2"
                            tools:targetApi="lollipop"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp">
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_shopping_basket"
                                app:tint="@color/expense_item_yellow"
                                android:layout_marginEnd="16dp"
                                tools:ignore="ContentDescription" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/category_shopping"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5%"
                                android:textColor="@color/expense_item_yellow"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/progress_shopping"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:max="100"
                            android:progress="5"
                            android:progressTint="@color/expense_item_yellow"
                            android:progressBackgroundTint="@color/input_border_light"
                            android:layout_marginBottom="16dp"
                            android:scaleY="2"
                            tools:targetApi="lollipop"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/recent_transactions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recent_transactions"
                            android:textColor="@color/text_main_header"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all"
                            android:textColor="@color/primary_green"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/transactions_will_appear_here"
                        android:textColor="@color/text_secondary_gray"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingVertical="40dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_background"
        app:itemIconTint="@drawable/bottom_nav_item_color"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:elevation="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/fab_green"
        app:fabCustomSize="64dp"
        app:maxImageSize="36dp"
        app:tint="@color/white"
        android:src="@drawable/ic_add"
        app:borderWidth="0dp"
        app:elevation="12dp"
        app:layout_anchor="@id/bottom_navigation"
        app:layout_anchorGravity="top|center"
        android:contentDescription="@string/add_new_transaction" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/button_red"
        app:tint="@color/white"
        app:fabSize="normal"
        android:src="@drawable/ic_chatbot"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:layout_gravity="end|bottom"
        android:contentDescription="@string/chatbot" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
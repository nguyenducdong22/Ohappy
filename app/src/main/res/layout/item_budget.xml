<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:backgroundTint="@color/white"
    android:clickable="true"    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_budget_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/circle_background_accent"
            app:tint="@color/white"
            android:src="@drawable/ic_food" android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_budget_item_icon"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/tv_budget_item_total_relative_layout_wrapper"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_budget_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Ngân sách"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_budget_item_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn lại 0.00 đ"
                android:textColor="@color/text_light"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_budget_item_total_relative_layout_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_budget_item_total" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 đ"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/> <ImageView
            android:id="@+id/iv_budget_item_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert" app:tint="@color/text_secondary_gray"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="More options" />
        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_budget_item"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressDrawable="@drawable/budget_progress_bar"
        android:progress="50"
        android:max="100"
        android:layout_marginBottom="8dp"/>

</LinearLayout>

</androidx.cardview.widget.CardView>
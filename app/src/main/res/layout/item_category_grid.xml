<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="12dp" android:paddingBottom="12dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless"> <ImageView
    android:id="@+id/category_icon"
    android:layout_width="44dp" android:layout_height="44dp"
    app:tint="@color/primary_green" /> <TextView
    android:id="@+id/category_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="@color/text_color_primary"
    android:gravity="center"
    android:layout_marginTop="6dp" android:lines="2"
    android:maxLines="2"
    android:ellipsize="end" />

</LinearLayout>
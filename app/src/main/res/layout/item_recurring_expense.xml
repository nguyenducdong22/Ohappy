<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    style="@style/Widget.App.CardView"
    app:cardBackgroundColor="@color/card_bg_white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_recurring_expense_category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_category" app:tint="@color/primary_green_dark"
            android:background="@drawable/circle_bg_light_green" android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_recurring_expense_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thuê nhà"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar_recurring" app:tint="@color/text_medium" />

                <TextView
                    android:id="@+id/tv_recurring_expense_frequency_next_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hàng tháng (Ngày 15)"
                    android:textSize="13sp"
                    android:textColor="@color/text_medium"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_recurring_expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.000.000 VND"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/button_red" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/text_light" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>